<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.atrio.rollcall.admin.SelectAdmin">


    <TextView
        android:text="Selct Class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="14sp"
        android:typeface="normal"
        android:textColor="@color/colorAccent"
        android:id="@+id/tv_class" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/sp_class" />

    <TextView
        android:text="Select Section "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="14sp"
        android:typeface="normal"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_sec" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/sp_sec" />

  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
    <TextView
        android:text="Enter RollNo "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:typeface="normal"
        android:textColor="@color/colorAccent"
        android:id="@+id/tv_roll" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:id="@+id/et_roll" />
    </LinearLayout>

    <Button
        android:text="Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_submit"
        android:layout_marginTop="16dp"
        android:layout_margin="20dp"
        android:layout_marginRight="14dp"
        android:background="@color/colorAccent"
        android:textColor="@color/buttontext"
        />

</LinearLayout>
