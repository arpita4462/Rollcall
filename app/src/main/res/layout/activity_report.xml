<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.atrio.rollcall.ReportActivity">
    <TextView
        android:text="Student Attendance Details:-"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="14sp"
        android:gravity="center"
        android:typeface="normal"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="10dp"
        android:id="@+id/show_tv" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textAllCaps="true"
        android:textSize="14sp"
        android:gravity="center"
        android:typeface="normal"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:text="Maths :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:typeface="normal"
                    android:textColor="@color/colorAccent"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:typeface="normal"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:id="@+id/math_tv"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:text="English :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:typeface="normal"
                    android:textColor="@color/colorAccent"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:typeface="normal"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:id="@+id/eng_tv"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:text="Science :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:typeface="normal"
                    android:textColor="@color/colorAccent"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:typeface="normal"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:id="@+id/sci_tv"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:text="Hindi :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:typeface="normal"
                    android:textColor="@color/colorAccent"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:typeface="normal"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:id="@+id/hindi_tv"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:text="Genral Knowledge :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:typeface="normal"
                    android:textColor="@color/colorAccent"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:typeface="normal"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:id="@+id/gk_tv"/>

            </LinearLayout>
                       <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                           android:gravity="center_horizontal">
                <TextView
                    android:text="Total Attendance :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:typeface="normal"
                    android:textColor="@color/colorAccent"/>
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textSize="14sp"
                               android:typeface="normal"
                               android:layout_marginLeft="20dp"
                               android:textColor="@color/black"
                               android:id="@+id/total_tv"/>


                       </LinearLayout>

        </LinearLayout>
</LinearLayout>
